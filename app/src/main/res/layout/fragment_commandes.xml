<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.commande.CommandeFragment">

    <TextView
        android:id="@+id/nav_commandes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="commande pour la semaine"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_commandes">


        <CheckBox
            android:id="@+id/lundi"
            android:text="@string/lundi" />

        <CheckBox
            android:id="@+id/mardi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mardi" />

        <CheckBox
            android:id="@+id/mercredi"
            android:text="@string/mercredi" />

        <CheckBox
            android:id="@+id/jeudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jeudi" />

        <CheckBox
            android:id="@+id/vendredi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vendredi" />
    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="76dp"
        android:text="suivant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>